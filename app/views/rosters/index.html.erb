<div class="jumbotron">

<h2>Rosters %>  </h2>

<%= form_tag(rosters_path , method: :get) do %>
  <%= date_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th> 	Project ID	</th>
			<th>	Project Name</th>
			<th>    Week      </th>
			<th>    Roster ID </th>
			<th>             </th>
		</tr>
	</thead>
	<tbody>
		  <% @rosters.each do |roster| %>
		  <tr>
		  	 <td> <%= roster.project_id %> </td>	
		  <td> <%= roster.project.project_name %> </td>	
        <td><%= roster.week%></td>
         
        <td><%= roster.id %></td>
        
             <td><%= link_to "<i class='glyphicon glyphicon-plus'> </i>".html_safe, 
             roster_path(roster) %></td>
    </tr>


    <% end %> 

	</tbody>
</table>


