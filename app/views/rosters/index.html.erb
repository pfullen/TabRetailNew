<div class="jumbotron">

<h2>Rosters  </h2>

<%= form_tag(rosters_path , method: :get) do %>
  <%= date_field_tag :term, params[:term] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>
				Project ID
			</th>
			<th>
				Week of
			</th>
			<th>ID </th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		  <% @rosters.each do |roster| %>
		  <tr>
        <td><%= roster.week%></td>
           <td><%= roster.roster_list.employee.full_name %></td>
        <td><%= roster.id %></td>
        
             <td><%= link_to "<i class='glyphicon glyphicon-plus'> </i>".html_safe, 
             roster_path(roster) %></td>
    </tr>


    <% end %> 

	</tbody>
</table>


