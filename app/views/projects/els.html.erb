
<div class="container">
	<div class="row">
		 <% @projects.each do |project| %>
		<div class="col-md-6">
			<div class="row">

				<div class="panel panel-primary">
				<div class="panel-heading">
					<h3 class="panel-title">
						<%= project.project_name %>
					</h3>
				</div>
				<div class="panel-body panel-details">
					<div class="col-md-4 proj-details">
						<p id="notice"><%= notice %></p>

									<p>
									  <strong>Address:</strong>
									  <%= project.address %>
									</p>

									<p>
									  <strong>Start Date:</strong>
									  <%= project.start_date.strftime("%m/%d/%y") %>
									</p>

									<p>
									  <strong>End Date:</strong>
									<%= project.end_date.strftime("%m/%d/%y") %>
									</p>

									<p>
									  <strong>Duration:</strong>
									  <%= project.duration %> Weeks
									</p>

									<p>
									  <strong>Site Manager:</strong>
									  
									</p>

									<p>
									  <strong>Project Manager:</strong>
									  <%= project.project_manager %>
									</p>
				</div>
				<div class="col-md-8 tabel-details">
						<table class = "table table-striped table-hover ">
				<thead>
				<tr>
				 
				  <th>Week of </th>
				  <th colspan="3"></th>
				</tr>
				</thead>

				<tbody>
				<% project.rosters.each do |roster| %>
				  <tr>
			
				    <td><%=roster.week %></td>
				    
				    <td><%= link_to 'View/Edit', edit_roster_path(roster) %></td>
				    <td><%= link_to 'Destroy', ""%></td>
				  </tr>
				    <tr>
				    
				      <th> Name </th>
				      <th> Phone </th>
				      <th> Per Diem </th>
				      <th> Expense Code </th>
				     </tr>
				  		<% roster.roster_lists.each do |list| %>

				        <tr>
				        	
				        	<td> <%= list.employee.full_name %> </td>
				        	<td> <%= list.employee.phone %> </td>

				        	<td> <%= list.perdiem %> </td>
				        	<td> <%= list.expense_code%> </td>

				        </tr>


                      <% end %>
							  
				      
				<% end %>
				</tbody>
				</table>
				</div>
				</div>
				
			</div>
				


			</div>
		</div>
		<% end %>
	</div>
</div>

