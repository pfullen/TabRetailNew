<div class = "jumbotron">
<div class = "container">
	<div class = "row" >
        
		<div class = "col-md-4 show">
  
			<div class = 'show-header'>
				 <%= @project.project_name %> 
			</div>
			 <div class = "show-body">
			 	<p id="notice"><%= notice %></p>

					<p>
					  <strong>Address:</strong>
					  <%= @project.address %>
					</p>

					<p>
					  <strong>Start Date:</strong>
					  <%= @project.start_date.strftime("%m/%d/%y") %>
					</p>

					<p>
					  <strong>End Date:</strong>
					<%= @project.end_date.strftime("%m/%d/%y") %>
					</p>

					<p>
					  <strong>Duration:</strong>
					  <%= @project.duration %> Weeks
					</p>

					<p>
					  <strong>Site Manager:</strong>
					  
					</p>

					<p>
					  <strong>Project Manager:</strong>0.............
					  <%= @project.project_manager %>
					</p>

						Project ID :  <%= @project.id %>

			 </div>
	
			 </div>
		 <div class = "col-md-8">


			<div class = 'show-header'>
				  Rosters 
			</div>
			 <div class = "show-body">
		 	<table class = "table table-striped table-hover">
				<thead>
				<tr>
				 
				  <th>Week of </th>
				  <th colspan="3"></th>
				</tr>
				</thead>

				<tbody>
				<% @project.rosters.each do |roster| %>
				  <tr>
			
				    <td><%=roster.week %></td>
				    
				    <td><%= link_to 'View/Edit', edit_roster_path(roster) %></td>
				    <td><%= link_to 'Destroy', ""%></td>
				  </tr>
				    <tr>
				    	<th> </th>
				      <th> Name </th>
				      <th> Phone </th>
				      <th> Per Diem </th>
				      <th> Expense Code </th>
				     </tr>
				  		<% roster.roster_lists.each do |list| %>

				        <tr>
				        	<td> </td>
				        	<td> <%= list.roster.id %> </td>
				        	<td> <%= list.employee.phone %> </td>

				        	<td> <%= list.perdiem %> </td>
				        	<td> <%= list.expense_code%> </td>

				        </tr>


                      <% end %>
							  
				      
				<% end %>
				</tbody>
				</table>

			</div>

		 </div>







  
   <td><%= link_to "View Rosters", "" %></td>


</div>


    


